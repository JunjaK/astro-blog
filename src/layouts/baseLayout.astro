---
import { ClientRouter } from 'astro:transitions';
import dayjs from 'dayjs';
import dayJsRelativeTime from 'dayjs/plugin/relativeTime';

import CommonScript from '@/components/layouts/CommonScript.astro';
import FloatButton from '@/components/layouts/FloatButton.astro';
import ImageFullscreen from '@/components/layouts/ImageFullscreen.astro';
import PelicaCursor from '@/components/layouts/PelicaCursor.astro';
import Footer from '@/components/layouts/Footer';
import Navigation from '@/components/layouts/Navigation';
import ThemeInit from '@/components/layouts/ThemeInit.astro';
import ScrollProgress from '@/components/ui/scroll-progress';
import CommonMeta from '../components/MetaAnalytics/CommonMeta.astro';
import JsonLd from '../components/MetaAnalytics/JsonLd.astro';
import VendorScript from '../components/MetaAnalytics/VendorScript.astro';
import '@fontsource/gothic-a1';
import '@fontsource/m-plus-1p';
import '@fontsource/roboto';
import '@/assets/styles/global.css';
import '@/assets/styles/index.scss';
import 'dayjs/locale/en';

dayjs.extend(dayJsRelativeTime);
dayjs.locale('en');

type Props = {
  title: string;
  description: string;
  keywords?: string[];
};

const { title, description, keywords } = Astro.props;
---

<html lang="en">
<head>
  <ClientRouter />
  <CommonMeta title={`Jun Devlog | ${title}`} description={description} keywords={keywords} />
  <JsonLd
    schema={{ type: 'website', title: `Jun Devlog | ${title}`, description }}
    breadcrumbs={[
      { name: 'Home', url: '/' },
      ...(Astro.url.pathname !== '/' ? [{ name: title, url: Astro.url.pathname }] : []),
    ]}
  />
  <VendorScript />
  <ThemeInit />
  <style>


  </style>

</head>
<body>
<PelicaCursor />
<ImageFullscreen />
<Navigation client:idle transition:persist="main-nav"></Navigation>

<main>
  <ScrollProgress
    className="scroll-animation  top-[4rem] max-md:top-[3.5rem] bg-gradient-to-r from-neutral-200/30 via-neutral-200/70 to-neutral-200/30"
    client:idle
  />

  <div class="container-wrapper">
    <slot></slot>
    <div class="dummy-container" />
  </div>
</main>
<Footer client:idle transition:persist="main-footer" />
<FloatButton />
<CommonScript />
</body>
</html>
