---
import type { CollectionEntry } from 'astro:content';
import { ClientRouter } from 'astro:transitions';
import dayjs from 'dayjs';
import dayJsRelativeTime from 'dayjs/plugin/relativeTime';

import FloatButton from '@/components/layouts/FloatButton.astro';
import ImageFullscreen from '@/components/layouts/ImageFullscreen.astro';
import PelicaCursor from '@/components/layouts/PelicaCursor.astro';
import Footer from '@/components/layouts/Footer';

import Navigation from '@/components/layouts/Navigation';
import ThemeInit from '@/components/layouts/ThemeInit.astro';
import ScrollProgress from '@/components/ui/scroll-progress';
import CommonScript from '../components/layouts/CommonScript.astro';
import CommonMeta from '../components/MetaAnalytics/CommonMeta.astro';
import JsonLd from '../components/MetaAnalytics/JsonLd.astro';
import VendorScript from '../components/MetaAnalytics/VendorScript.astro';
import 'react-photo-view/dist/react-photo-view.css';


import '@fontsource/gothic-a1';
import '@fontsource/m-plus-1p';
import '@fontsource/roboto';
import '@fontsource-variable/noto-sans-kr';

import '@/assets/styles/global.css';
import '@/assets/styles/index.scss';

import 'dayjs/locale/en';

dayjs.extend(dayJsRelativeTime);
dayjs.locale('en');

type Props = {
  post: CollectionEntry<'project'>['data'];
  url: string;
  nav?: {
    prev: CollectionEntry<'project'> | null;
    next: CollectionEntry<'project'> | null;
  };
};

const { post } = Astro.props;

const { title, techStacks = [], description, thumbnail } = post;
---

<html lang="en">
<head>
  <meta name="giscus:backlink" content="https://bit.ly/RickRolled" />
  <ClientRouter />
  <CommonMeta
    title={`Jun Devlog | ${title}`}
    description={description || title}
    keywords={techStacks}
    image={thumbnail}
  />
  <JsonLd
    schema={{ type: 'website', title, description: description || title }}
    breadcrumbs={[
      { name: 'Home', url: '/' },
      { name: 'Project', url: '/project' },
      { name: title, url: Astro.url.pathname },
    ]}
  />
  <VendorScript />
  <ThemeInit />
  <style>

  </style>

</head>
<body>
<PelicaCursor />
<ImageFullscreen />
<Navigation client:idle transition:persist="main-nav"></Navigation>

<main>

  <ScrollProgress
    className="scroll-animation top-[4rem] max-md:top-[3.5rem] bg-gradient-to-r from-neutral-200/30 via-neutral-200/70 to-neutral-200/30"
    client:visible
  />

  <div class="markdown-content-wrapper">
    <div
      id="go-back"
      class="text-lg font-bold text-opacity-80 text-slate-600 dark:text-gray-300 hover:text-slate-900 dark:hover:text-gray-50 mb-2 w-[3rem] cursor-pointer"
      onclick="history.back()"
    >
      {`> cd ..`}
    </div>
    <div class="article-entry">
      <slot></slot>
    </div>
    <div class="dummy-container" />
  </div>
</main>
<Footer client:idle transition:persist="main-footer" />
<FloatButton />
<CommonScript />
</body>
</html>
