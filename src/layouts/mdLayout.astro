---
import type { CollectionEntry } from 'astro:content';
import { ClientRouter } from 'astro:transitions';
import dayjs from 'dayjs';
import dayJsRelativeTime from 'dayjs/plugin/relativeTime';

import BlogNav from '@/components/Blog/BlogNav';
import FloatButton from '@/components/layouts/FloatButton.astro';
import PelicaCursor from '@/components/layouts/PelicaCursor.astro';
import Footer from '@/components/layouts/Footer';
import Navigation from '@/components/layouts/Navigation';

import ThemeInit from '@/components/layouts/ThemeInit.astro';
import ScrollProgress from '@/components/ui/scroll-progress';
import BlogFrontmatter from '../components/Blog/BlogFrontmatter';
import GiscusComp from '../components/Blog/GiscusComp';
import CommonScript from '../components/layouts/CommonScript.astro';
import CommonMeta from '../components/MetaAnalytics/CommonMeta.astro';
import VendorScript from '../components/MetaAnalytics/VendorScript.astro';
import { Separator } from '../components/ui/separator';

import { Skeleton } from '../components/ui/skeleton';
import 'react-photo-view/dist/react-photo-view.css';
import '@fontsource/gothic-a1';
import '@fontsource/m-plus-1p';
import '@fontsource/roboto';

import '@fontsource-variable/noto-sans-kr';
import '@/assets/styles/global.css';
import '@/assets/styles/index.scss';
import 'dayjs/locale/en';

dayjs.extend(dayJsRelativeTime);
dayjs.locale('en');

type Props = {
  post: CollectionEntry<'blog'>['data'];
  url: string;
  nav?: {
    prev: CollectionEntry<'blog'> | null;
    next: CollectionEntry<'blog'> | null;
  };
};

const { nav, post, url } = Astro.props;

const { title, tags = [], category = '' } = post;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="giscus:backlink" content="https://bit.ly/RickRolled" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ClientRouter />
    <CommonMeta
      title={`Jun devlog | ${title}`}
      description={`Blog Page | ${category}`}
      keywords={tags}
    />
    <VendorScript />
    <ThemeInit />
    <style></style>
  </head>
  <body>
    <PelicaCursor />
    <Navigation client:idle transition:persist="main-nav" />

    <main>
      <ScrollProgress
        className="scroll-animation top-[4rem] max-md:top-[3.5rem] bg-gradient-to-r from-neutral-200/30 via-neutral-200/70 to-neutral-200/30"
        client:idle
      />

      <div class="markdown-content-wrapper">
        <div
          id="go-back"
          class="text-lg font-bold text-opacity-80 text-slate-600 dark:text-gray-300 hover:text-slate-900 dark:hover:text-gray-50 mb-2 w-[5rem] cursor-pointer"
          onclick="history.go((window._mdEntryIndex ?? 0) - (history.state?.index ?? 0) - 1)"
        >
          {`> cd ..`}
        </div>
        <div class="front-matter-info">
          <BlogFrontmatter frontmatter={post} client:visible />
        </div>
        <div class="blog-nav">
          <BlogNav nav={nav} client:visible />
        </div>
        <div class="article-entry" data-pagefind-body>
          {tags.map((tag) => (
            <meta data-pagefind-filter={`tag:${tag}`} />
          ))}
          <meta data-pagefind-filter={`category:${category}`} />
          <slot />
        </div>
        <div class="blog-nav">
          <BlogNav nav={nav} client:visible />
        </div>
        <Separator className="my-8" client:visible />

        <div class="giscus-body">
          <GiscusComp client:visible>
            <div class="giscus-fallback" slot="fallback">
              <Skeleton className="h-[1rem] w-full]" />
              <Skeleton className="h-[1rem] w-full" />
              <Skeleton className="h-[1rem] w-full" />
            </div>
          </GiscusComp>
        </div>
        <div class="dummy-container"></div>
      </div>
    </main>
    <Footer client:idle transition:persist="main-footer" />
    <FloatButton />
    <CommonScript />
  </body>
</html>

<script is:inline>
window._mdEntryIndex = window.history.state?.index ?? 0;

(function scrollToSection() {
  const params = new URLSearchParams(window.location.search);
  const section = Number.parseInt(params.get('section'), 10);
  if (!section || section < 1)
    return;

  const headings = document.querySelectorAll('.article-entry h2');
  const target = headings[section - 1];
  if (!target)
    return;

  setTimeout(() => {
    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }, 100);
})();
</script>
