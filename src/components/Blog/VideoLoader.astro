---
import { getBasePathWithUrl } from '@/utils/getBasePathWithUrl.ts';
import { Zorn } from '@minpluto/zorn';

interface Props {
  src: string;
}

const { src } = Astro.props;
const uuid = crypto.randomUUID();
---

<Zorn
  PlayerName={uuid}
  Video={getBasePathWithUrl(src)}
  ShowBackAndForward
  ShowPlaybackRate
  BigPlayButton
  Settings={[]}
/>
