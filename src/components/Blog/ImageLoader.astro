---
// Lightweight server-rendered <img> for MDX blog posts (no client JS).
// For lens zoom on hover, use ImageLoader.tsx with client:visible instead.
type Props = {
  src?: string;
  alt?: string;
  class?: string;
  width?: number;
  height?: number;
};

const { src, alt = 'blog-image', class: className, width, height } = Astro.props;
---

<img
  src={src ?? ''}
  alt={alt ?? 'blog-image'}
  loading="lazy"
  onerror={`this.src='/fallbackImg.svg'`}
  class={className}
  width={width}
  height={height}
/>
