---
import MermaidInit from '@/components/layouts/MermaidInit.astro';
import MdLayout from '@/layouts/mdLayout.astro';
import { type CollectionEntry, getCollection, render } from 'astro:content';
import dayjs from 'dayjs';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  posts.sort((a, b) => dayjs(b.data.created).unix() - dayjs(a.data.created).unix());

  return posts.map((post, index) => ({
    params: { slug: post.id },
    props: {
      post,
      next: posts[index - 1] || null,
      prev: posts[index + 1] || null,
    },
  }));
}
type Props = {
  post: CollectionEntry<'blog'>;
  prev: CollectionEntry<'blog'> | null;
  next: CollectionEntry<'blog'> | null;
};


const { post, prev, next } = Astro.props;
const { Content } = await render(post);
---

<MdLayout post={post.data} nav={{ prev, next }} url={`/blog/${post.id}`}>
  <Content />
</MdLayout>

<MermaidInit />
