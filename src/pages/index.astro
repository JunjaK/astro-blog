---
import Flickering from '@/components/home/Flickering';
import InteractiveIconCloud from '@/components/home/InteractiveIconCloud';
import Intro from '@/components/home/Intro';
import TerminalInfo from '@/components/home/TerminalInfo';
import GradualSpacing from '@/components/ui/gradual-spacing';
import LetterPullup from '@/components/ui/letter-pullup';
import ScrollProgress from '@/components/ui/scroll-progress';

import { Separator } from '@/components/ui/separator';
import BaseLayout from '@/layouts/baseLayout.astro';


// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<BaseLayout title="Home">
  <ScrollProgress className="scroll-animation top-[6.4rem] max-md:top-[4.4rem] bg-gradient-to-r from-neutral-200/30 via-neutral-200/70 to-neutral-200/30" client:visible />

  <div class="container overflow-x-hidden">
    <div class="mt-[20rem]"></div>
    <div class="flex justify-center ">
      <TerminalInfo client:visible />
    </div>
    <Flickering client:visible />
    <div id="intro">
      <div class="flex justify-center mt-[-21rem]">
        <div class="intro-wrapper">
          <LetterPullup className="max-sm:text-3xl dark:text-slate-200 text-slate-700 " words="Hello World! I'm Junja" delay={0.05} client:visible />
          <Intro client:visible />
        </div>
      </div>
      <div class="on-spacer"></div>
      <Separator className="my-8" />
        <GradualSpacing
          className="font-display text-center text-4xl max-sm:text-3xl font-extrabold dark:text-slate-200 text-slate-700"
          text="Technologies I've worked"
          client:visible
        />
      <div class="flex justify-center">

        <InteractiveIconCloud client:visible />
      </div>
    </div>



  </div>

</BaseLayout>

<script is:inline>
  setTimeout(() => {
    if (document.getElementById('intro'))
      document.getElementById('intro').classList.add('visible');
  }, 6000);
</script>
